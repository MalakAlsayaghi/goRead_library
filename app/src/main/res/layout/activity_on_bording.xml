<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guidelines"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/mainColor"
        android:textSize="28sp" />
    <ImageView
        android:id="@+id/img_intro"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_privacypolicy" />



    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:text="To provide a safe and trusted experience for everyone here are some guidelines you must know:
"
        android:textColor="@color/brown"
        android:textSize="16sp" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <TableRow>

            <TextView
                android:layout_marginTop="10dp"

                android:layout_column="1"
                android:layout_width="wrap_content"
                android:text="•Admin will have full control like:\n
 Deleting or blocking the library.\n
 Deleting quotes or books.\n
 Chats with customers will be viewed."
                android:textColor="@color/brown"
                android:textSize="16sp"
                ></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:text="•Pictures uploaded must be appropriate.
"        android:layout_marginTop="10dp"

                android:textColor="@color/brown"
                android:textSize="16sp"
                ></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:text="•Inappropriate words will be censored.
"        android:layout_marginTop="10dp"

                android:textColor="@color/brown"
                android:textSize="16sp"
                ></TextView>
        </TableRow>



        <TableRow>

            <TextView
                android:layout_marginTop="10dp"

                android:layout_column="1"
                android:layout_width="wrap_content"
                android:text="•The library owner is not allowed to share or publish his own personal contact information.
"
                android:textColor="@color/brown"
                android:textSize="16sp"
                ></TextView>
        </TableRow>



    </TableLayout>

    <CheckBox
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I have read and agreed to all Terms and Conditions"/>

    <Button
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mainColor"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>