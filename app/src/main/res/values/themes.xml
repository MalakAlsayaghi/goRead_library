<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoRead_library" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainColor</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- all items cusomized. -->
        <item name="android:itemTextAppearance">@style/textColor</item>
        <item name="android:itemBackground">@color/mainColor</item>
    </style>

    <style name="textColor"
        parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="customFab">
        <item name="android:background">@drawable/bg_login</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>